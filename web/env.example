# env example for resumebase (copy to .env.local)

# required — browserbase
BROWSERBASE_API_KEY=your_browserbase_api_key
BROWSERBASE_PROJECT_ID=your_browserbase_project_id

# choose one provider — google (default here)
GOOGLE_API_KEY=your_google_api_key
GOOGLE_MODEL=google/gemini-2.5-pro

# optional: otp extraction model
GOOGLE_OTP_MODEL=google/gemini-2.5-flash

# optional — openai (uncomment to use)
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_MODEL=openai/gpt-4o-mini

# optional — supabase (only if you enable related features)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# gmail oauth (only if you enable gmail features)
GMAIL_CLIENT_ID=your_google_oauth_client_id
GMAIL_CLIENT_SECRET=your_google_oauth_client_secret
GMAIL_REFRESH_TOKEN=your_google_oauth_refresh_token
GMAIL_OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/gmail/callback

# session/cookie encryption
SESSION_SECRET=change-me-to-a-long-random-string

# optional — runtime constraints
# ALLOWLIST=example.com,another.com
# BROWSER_WIDTH=1280
# BROWSER_HEIGHT=720
