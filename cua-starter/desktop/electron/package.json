{
    "name": "cua-desktop",
    "version": "1.0.0",
    "description": "CUA Desktop Application",
    "author": "CUA Team",
    "private": true,
    "main": "dist/main.js",
    "type": "commonjs",
    "scripts": {
      "dev": "tsc -p . && electron dist/main.js",
      "dev:watch": "tsc -p . --watch & electron dist/main.js",
      "prebuild": "rm -rf dist && mkdir -p dist && cp src/preload.cjs dist/",
      "build": "tsc -p . && electron-builder -m",
      "start": "electron ./dist/main.js"
    },
    "build": {
      "appId": "com.cua.desktop",
      "directories": {
        "output": "dist"
      },
      "files": [
        "dist/**/*",
        "!dist/mac-arm64/**/*"
      ],
      "mac": {
        "identity": null
      }
    },
    "dependencies": {},
    "devDependencies": {
      "electron": "^31.2.0",
      "ts-node": "^10.9.2",
      "typescript": "^5.4.0",
      "electron-builder": "^24.13.3"
    }
  }